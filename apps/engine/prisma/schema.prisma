generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TestimonialStatus {
  PENDING
  APPROVED
  REJECTED
}

enum BloodGroup {
  A_POSITIVE
  A_NEGATIVE
  B_POSITIVE
  B_NEGATIVE
  AB_POSITIVE
  AB_NEGATIVE
  O_POSITIVE
  O_NEGATIVE
}

model Cause {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  events Event[]

  @@map("causes")
}

model Event {
  id        String    @id @default(cuid())
  causeId   String
  title     String
  startDate DateTime
  endDate   DateTime?
  location  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  cause Cause @relation(fields: [causeId], references: [id], onDelete: Cascade)

  @@map("events")
}

model Member {
  id                 String     @id @default(cuid())
  name               String
  mobile             String     @unique
  adhaar             String     @unique
  bloodGroup         BloodGroup
  locality           String
  district           String
  state              String
  zip                String
  sendWelcomeMessage Boolean    @default(false)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  @@map("members")
}

model TestimonialLink {
  id          String   @id @default(cuid())
  name        String
  designation String?
  token       String   @unique
  expiresAt   DateTime
  isUsed      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("testimonial_links")
}

model Testimonial {
  id          String            @id @default(cuid())
  testimonial String
  name        String
  designation String?
  status      TestimonialStatus @default(PENDING)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@map("testimonials")
}